{
  "expo": {
    "name": "Finvy",
    "slug": "finvy",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#0f172a"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.finvy.app",
      "infoPlist": {
        "NSCameraUsageDescription": "Приложение использует камеру для сканирования чеков",
        "NSPhotoLibraryUsageDescription": "Приложение использует галерею для загрузки фото чеков"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0f172a"
      },
      "package": "com.finvy.app",
      "googleServicesFile": "./google-services.json",
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Разрешите доступ к камере для сканирования чеков"
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Разрешите доступ к галерее для загрузки чеков"
        }
      ]
    ]
  }
}
